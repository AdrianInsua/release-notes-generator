{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es5",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "connections/*": ["/connections/*"],
      "parser/*": ["/parser/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Modules */
    "skipLibCheck": true
  }
}
